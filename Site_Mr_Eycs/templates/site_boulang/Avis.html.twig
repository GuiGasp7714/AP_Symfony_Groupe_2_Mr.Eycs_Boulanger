{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="Avis">
 <h1>Avis</h1>
</div>
<ul>
    {% for Avis in LesAvis %}
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h4 class="card-title">{{Avis.note}} / 5</h4>
                <p class="card-text">{{Avis.commentaire}}</p>
                <form method="POST" action="avis">
                    <button type="submit" class="button-modif">Supprimer</button>
                    <input type="hidden" id="idAvisSupp" name="idAvisSupp" value="{{Avis.id}}">
                </form>
            </div>
        </div>
    {% endfor %}
</ul>
{% endblock %}
